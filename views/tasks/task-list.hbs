<div class="min-h-screen bg-gray-50 p-6">
  <div class="max-w-3xl mx-auto">
    <!-- Page Title -->
    <h1 class="text-4xl font-extrabold text-gray-800 mb-6">Tasks List</h1>

    <!-- Tasks List -->
    {{#if tasks.length}}
      <ul class="space-y-4">
        {{#each tasks}}
          <li class="bg-white p-4 rounded-xl shadow-sm flex justify-between items-center">
            <span class="text-gray-700 font-medium">{{this.title}}</span>

            <div class="flex space-x-2">
              <!-- Edit Button -->
              <a
                href="/tasks/edit/{{this.id}}"
                class="flex items-center gap-1 bg-blue-100 hover:bg-blue-200 text-blue-700 font-medium py-1.5 px-3 rounded-lg transition"
              >
                <!-- Edit Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none"
                  viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M16.862 3.487a2.25 2.25 0 113.182 3.182L7.125 19.588l-4.125.943.943-4.125L16.862 3.487z" />
                </svg>
                Edit
              </a>

              <!-- Delete Button -->
              <form action="/tasks/delete/{{this.id}}" method="POST"
                onsubmit="return confirm('Are you sure?')">
                <button
                  type="submit"
                  class="flex items-center gap-1 bg-rose-100 hover:bg-rose-200 text-rose-700 font-medium py-1.5 px-3 rounded-lg transition"
                >
                  <!-- Delete Icon -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M6 18L18 6M6 6l12 12" />
                  </svg>
                  Delete
                </button>
              </form>
            </div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="text-gray-500 mt-4">No tasks found</p>
    {{/if}}

    <!-- Create / Edit Form -->
    <div class="mt-10">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">
        {{#if isEdit}}Update Task{{else}}Create a New Task{{/if}}
      </h2>

      {{> task-form}}
    </div>
  </div>
</div>
