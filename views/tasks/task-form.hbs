<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">
    {{#if isEdit}}Update Task{{else}}Create Task{{/if}}
  </h2>

  <form
    method="POST"
    action="{{#if isEdit}}/tasks/update/{{task.id}}{{else}}/tasks/save{{/if}}"
    class="space-y-4"
  >
    <!-- Task Input -->
    <div>
      <input
        type="text"
        name="title"
        placeholder="Enter task"
        value="{{#if task}}{{task.title}}{{/if}}"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <!-- Submit & Cancel -->
    <div class="flex items-center space-x-4">
      <button
        type="submit"
        class="flex-1 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300"
      >
        {{#if isEdit}}Update Task{{else}}Create Task{{/if}}
      </button>

      {{#if isEdit}}
        <a
          href="/tasks"
          class="text-gray-600 hover:text-gray-800 underline"
        >
          Cancel
        </a>
      {{/if}}
    </div>
  </form>
</div>
