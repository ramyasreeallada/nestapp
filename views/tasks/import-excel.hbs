<div class="min-h-screen bg-gray-50 py-10">
  <div class="max-w-5xl mx-auto bg-white p-8 rounded-xl shadow-sm">

    <!-- Page Title -->
    <h1 class="text-3xl font-bold text-gray-800 mb-6">
      Import Excel Data
    </h1>

    <!-- Upload Form -->
    <form
      action="/tasks/import-excel"
      method="POST"
      enctype="multipart/form-data"
      class="flex flex-col sm:flex-row items-start sm:items-center gap-4 mb-8"
    >
      <input
        type="file"
        name="file"
        accept=".xls,.xlsx"
        required
        class="block w-full sm:w-auto text-sm text-gray-600
               file:mr-4 file:py-2 file:px-4
               file:rounded-lg file:border-0
               file:text-sm file:font-medium
               file:bg-blue-50 file:text-blue-700
               hover:file:bg-blue-100"
      />

      <button
        type="submit"
        class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2 rounded-lg transition"
      >
        Upload
      </button>
    </form>

    <!-- Imported Data Table -->
    {{#if data}}
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">
        Imported Table
      </h2>

      <div class="overflow-x-auto border border-gray-200 rounded-lg">
        <table class="min-w-full border-collapse text-sm">
          <thead class="bg-gray-100">
            <tr>
              {{#each (objectKeys data.[0])}}
                <th class="px-4 py-2 text-left font-semibold text-gray-700 border-b">
                  {{this}}
                </th>
              {{/each}}
            </tr>
          </thead>
          <tbody>
            {{#each data}}
              <tr class="odd:bg-white even:bg-gray-50 hover:bg-blue-50 transition">
                {{#each this}}
                  <td class="px-4 py-2 text-gray-700 border-b">
                    {{this}}
                  </td>
                {{/each}}
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/if}}

  </div>
</div>
